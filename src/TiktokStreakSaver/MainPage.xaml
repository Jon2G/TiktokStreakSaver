<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiktokStreakSaver.MainPage"
             Title="TikTok Streak Saver"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            
            <!-- Header -->
            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="12" Margin="0,0,0,8">
                <Frame Grid.Column="0" 
                       BackgroundColor="{StaticResource Primary}" 
                       CornerRadius="12" 
                       Padding="12"
                       HasShadow="False">
                    <Label Text="🔥" FontSize="28" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Frame>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                    <Label Text="Streak Saver" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                    <Label x:Name="StatusLabel" 
                           Text="Not scheduled" 
                           FontSize="14"
                           TextColor="{StaticResource Gray400}"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Status Card -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="False">
                <Grid RowDefinitions="Auto, Auto, Auto" RowSpacing="12">
                    <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                        <Label Text="Schedule Status" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                        <Switch x:Name="ScheduleSwitch" 
                                Grid.Column="1"
                                Toggled="OnScheduleToggled"/>
                    </Grid>
                    
                    <VerticalStackLayout Grid.Row="1" Spacing="4">
                        <Label Text="Last Run:" 
                               FontSize="12" 
                               TextColor="{StaticResource Gray400}"/>
                        <Label x:Name="LastRunLabel" 
                               Text="Never" 
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Grid.Row="2" Spacing="4">
                        <Label Text="Next Run:" 
                               FontSize="12" 
                               TextColor="{StaticResource Gray400}"/>
                        <Label x:Name="NextRunLabel" 
                               Text="Not scheduled" 
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- TikTok Login Button -->
            <Grid>
                <Button x:Name="LoginButton"
                        Text="🔐  Login to TikTok"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        Clicked="OnLoginClicked"/>
                
                <!-- Session checking indicator -->
                <HorizontalStackLayout x:Name="SessionCheckingIndicator" 
                                       IsVisible="False"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="8">
                    <ActivityIndicator IsRunning="True" 
                                       Color="White" 
                                       HeightRequest="20" 
                                       WidthRequest="20"/>
                    <Label Text="Checking session..." 
                           TextColor="White" 
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
            
            <!-- Hidden WebView for session validation -->
            <WebView x:Name="SessionCheckWebView"
                     HeightRequest="0"
                     WidthRequest="0"
                     IsVisible="False"
                     Navigated="OnSessionCheckNavigated"/>

            <!-- Message Configuration -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Message to Send" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                    
                    <Border Stroke="{StaticResource Gray400}" 
                            StrokeThickness="1" 
                            StrokeShape="RoundRectangle 8">
                        <Editor x:Name="MessageEditor"
                                Placeholder="Enter your streak message..."
                                HeightRequest="80"
                                Margin="8"
                                TextChanged="OnMessageChanged"/>
                    </Border>
                </VerticalStackLayout>
            </Frame>

            <!-- Friends List -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Friends List" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                        <Button Grid.Column="1"
                                Text="+ Add"
                                BackgroundColor="{StaticResource Secondary}"
                                TextColor="{StaticResource Gray900}"
                                FontSize="12"
                                HeightRequest="32"
                                Padding="12,0"
                                CornerRadius="16"
                                Clicked="OnAddFriendClicked"/>
                    </Grid>
                    
                    <!-- Add Friend Input (Hidden by default) -->
                    <VerticalStackLayout x:Name="AddFriendPanel" IsVisible="False" Spacing="8">
                        <Border Stroke="{StaticResource Gray400}" 
                                StrokeThickness="1" 
                                StrokeShape="RoundRectangle 8">
                            <Entry x:Name="NewFriendUsernameEntry"
                                   Placeholder="TikTok username (without @)"
                                   Margin="8,4"/>
                        </Border>
                        <Border Stroke="{StaticResource Gray400}" 
                                StrokeThickness="1" 
                                StrokeShape="RoundRectangle 8">
                            <Entry x:Name="NewFriendDisplayNameEntry"
                                   Placeholder="Display name (optional)"
                                   Margin="8,4"/>
                        </Border>
                        <Grid ColumnDefinitions="*, *" ColumnSpacing="8">
                            <Button Text="Cancel"
                                    BackgroundColor="{StaticResource Gray400}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="40"
                                    Clicked="OnCancelAddFriend"/>
                            <Button Grid.Column="1"
                                    Text="Save"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="40"
                                    Clicked="OnSaveFriend"/>
                        </Grid>
                    </VerticalStackLayout>
                    
                    <!-- Friends List -->
                    <VerticalStackLayout x:Name="FriendsListContainer" Spacing="8">
                        <Label x:Name="NoFriendsLabel" 
                               Text="No friends added yet. Tap '+ Add' to add friends."
                               FontSize="14"
                               TextColor="{StaticResource Gray400}"
                               HorizontalOptions="Center"
                               IsVisible="True"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Actions -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="12">
                <Button Text="⚙️  Permissions"
                        BackgroundColor="{StaticResource Gray600}"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="50"
                        Clicked="OnPermissionsClicked"/>
                <Button Grid.Column="1"
                        x:Name="RunNowButton"
                        Text="▶️  Run Now"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="{StaticResource Gray900}"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        Clicked="OnRunNowClicked"/>
            </Grid>

            <!-- Run History -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Recent Activity" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                    
                    <VerticalStackLayout x:Name="HistoryContainer" Spacing="8">
                        <Label x:Name="NoHistoryLabel" 
                               Text="No activity yet."
                               FontSize="14"
                               TextColor="{StaticResource Gray400}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Footer spacing -->
            <BoxView HeightRequest="20" Color="Transparent"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
